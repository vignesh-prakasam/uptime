<h1>Listing settings</h1>

<table>
  <thead>
    <tr>
      <th>Api</th>
      <th>Email notification</th>
      <th>Sms notification</th>
      <th>Email ids</th>
      <th>Phone numbers</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.api_id %></td>
        <td><%= setting.email_notification %></td>
        <td><%= setting.sms_notification %></td>
        <td><%= setting.email_ids.join(',') %></td>
        <td><%= setting.phone_numbers %></td>
        <td><%= link_to 'Show', setting %></td>
        <td><%= link_to 'Edit', edit_setting_path(setting) %></td>
        <td><%= link_to 'Destroy', setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Setting', new_setting_path %>
