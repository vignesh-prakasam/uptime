<div class="row">
  <div class="large-12 columns">
    <div class="panel">
      <h1 class="text-center">API Logs</h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="large-12 columns left">
    <h5 class="text-center">Last 50 entries</h5>
  </div>
</div>
<div class="row">
  <div class="large-12 columns">

    <table>
      <thead>
      <tr>
        <th>Api</th>
        <th>Response</th>
        <th>Status</th>
        <th>Time</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @logs.each do |log| %>
          <tr>
            <td><%= log.api.name %></td>
            <td><%= log.response[0..100] %> <%= "..." if log.response.size > 100  %></td>
            <td>
              <%if log.status%>
                  <span class="success label center">Up!</span>
              <%else  %>
                  <span class="alert label">Down!</span>
              <% end  %>
            </td>
            <td><%= log.created_at %></td>
            <td><%= link_to 'Show', log ,:class => "button radius tiny success"  %></td>
            <td><%= link_to 'Delete', log, method: :delete, :class => "button radius tiny alert" ,data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>


  </div>
</div>