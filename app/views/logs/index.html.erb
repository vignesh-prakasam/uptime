<h1>Listing logs</h1>

<table>
  <thead>
    <tr>
      <th>Api</th>
      <th>Response</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td><%= log.api_id %></td>
        <td><%= log.response[0..100] %> <%= "..." if log.response.size > 100  %></td>
        <td><%= log.status %></td>
        <td><%= link_to 'Show', log %></td>
        <td><%= link_to 'Edit', edit_log_path(log) %></td>
        <td><%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


